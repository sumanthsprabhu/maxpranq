<?xml version="1.0" ?>
<VC>
  <FUNDECLS>
    <FUNDECL>
      <ARITY>2</ARITY>
      <NAME>inv</NAME>
    </FUNDECL>
  </FUNDECLS>
  <VARDECLS>
    <VAR>x</VAR>
    <VAR>x1</VAR>
    <VAR>n</VAR>
    <VAR>n1</VAR>
  </VARDECLS>
  <ASSERT type="good 0">
    <VARDECLS>
      <VAR>x</VAR>
      <VAR>n</VAR>
    </VARDECLS>
    <OR>
      <NOT>
        <EQ>
          <VAR>x</VAR>
          <INT>0</INT>
        </EQ>
      </NOT>
      <NOT>
        <EQ>
          <VAR>n</VAR>
          <INT>0</INT>
        </EQ>
      </NOT>
    </OR>
  </ASSERT>
  <ASSERT type="0 0">
    <BEFORE>
      <VAR>x</VAR>
      <VAR>n</VAR>
    </BEFORE>
    <AFTER>
      <VAR>x1</VAR>
      <VAR>n1</VAR>
    </AFTER>
    <OR>
      <NOT>
        <EQ>
          <VAR>n1</VAR>
          <PLUS>
            <VAR>n</VAR>
            <INT>1</INT>
          </PLUS>
        </EQ>
      </NOT>
      <NOT>
        <EQ>
          <VAR>x1</VAR>
          <PLUS>
            <VAR>x</VAR>
            <MUL>
              <INT>2</INT>
              <VAR>n1</VAR>
            </MUL>
            <INT>-1</INT>
          </PLUS>
        </EQ>
      </NOT>
    </OR>
  </ASSERT>
  <ASSERT type="bad 0">
    <VARDECLS>
      <VAR>x</VAR>
      <VAR>n</VAR>
    </VARDECLS>
    <OR>
      <EQ>
        <VAR>x</VAR>
        <MUL>
          <VAR>n</VAR>
          <VAR>n</VAR>
        </MUL>
      </EQ>
    </OR>
  </ASSERT>
</VC>

